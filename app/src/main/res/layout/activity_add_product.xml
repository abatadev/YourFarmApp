<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="24dp">

        <TextView
            android:id="@+id/input_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter crops that you wish to sell."
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginBottom="32dp"/>

        <ImageView
            android:id="@+id/crop_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/crop_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Crop Type"
            android:textSize="18sp"
            android:textStyle="bold"
            android:inputType="text"/>

        <EditText
            android:id="@+id/crop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Crop Name "
            android:textSize="18sp"
            android:textStyle="bold"
            android:inputType="text"/>

        <TextView
            android:id="@+id/dealer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textStyle="bold"
            android:text="Dealer: " />

        <TextView
            android:id="@+id/farmer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textStyle="bold"
            android:text="Farmer: " />

        <EditText
            android:id="@+id/crop_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price"
            android:textSize="22sp"
            android:textStyle="bold"
            android:inputType="text"/>

        <Button
            android:id="@+id/save_product_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_marginTop="32dp"
            android:textStyle="bold"/>


    </LinearLayout>

</RelativeLayout>