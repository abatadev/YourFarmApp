<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="24dp">

        <TextView
            android:id="@+id/input_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter crops that you wish to sell."
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="32dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/crop_image"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_menu_camera"
                android:drawablePadding="12dp"
                android:layout_marginRight="8dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="Upload Image"
                android:textSize="24sp"
                />

        </LinearLayout>

        <EditText
            android:id="@+id/crop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Crop Name "
            android:textSize="22sp"
            android:textStyle="bold"
            android:inputType="text"
            android:textColor="@color/colorPrimaryDark"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category: "
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"/>

            <Spinner
                android:id="@+id/category_spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        </LinearLayout>


        
        <EditText
            android:id="@+id/crop_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price"
            android:textSize="22sp"
            android:textStyle="bold"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/crop_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Quantity"
                android:textSize="22sp"
                android:textStyle="bold"
                android:inputType="numberDecimal"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

        <EditText
            android:id="@+id/product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="22sp"
            android:hint="Description"
            android:minLines="4"
            android:maxLines="5"
            />

        <Button
            android:id="@+id/save_product_button"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Save Product"
            android:layout_marginTop="32dp"
            android:drawableLeft="@drawable/ic_save_black_24dp"
            android:paddingStart="12dp"
            android:paddingEnd="8dp"
            android:drawablePadding="12dp"
            android:background="@drawable/custom_button"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"/>


    </LinearLayout>

</RelativeLayout>